{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "types": [
      "node",
      "vite/client",
      "vitest/importMeta"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/client/**",
    "**/playground/**",
    "**/examples/**",
    "**/interactive/**",
    "**/test/dts/**"
  ]
}
